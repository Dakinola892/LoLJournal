<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="matchup"
            type="com.danielakinola.loljournal.data.models.Matchup" />

        <variable
            name="listener"
            type="com.danielakinola.loljournal.matchups.MatchupItemActionListener" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:onClick="@{() -> listener.onMatchupClicked(matchup)}"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/img_champion_portrait"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:scaleX="1.1"
                android:scaleY="2.0"
                android:src="@{matchup.enemyChampionImageResource}"
                android:translationY="40dp"
                tools:src="@drawable/annie_loading_2" />

            <TextView
                android:id="@+id/text_champion_name"
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/img_champion_portrait"
                android:layout_gravity="center_vertical|start"
                android:background="@android:color/white"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="16dp"
                android:text="@{matchup.enemyChampion}"
                android:textSize="18sp"
                tools:text="Annie - 87 Games"
                tools:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkbox_champion_starred"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/img_champion_portrait"
                android:layout_toEndOf="@id/text_champion_name"
                android:background="@android:color/white"
                android:button="@drawable/selector_favourite"
                android:buttonDrawable="@{matchup.starred ? @drawable/ic_star_gold_24dp : @drawable/ic_star_border_gold_24dp}"
                android:checked="@{matchup.starred}"
                android:gravity="center"
                android:onClick="@{(view) -> listener.onFavouriteChanged(matchup, view)}"
                android:padding="8dp"
                tools:src="@drawable/ic_star_border_gold_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</layout>