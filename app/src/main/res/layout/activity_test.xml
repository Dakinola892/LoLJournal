<?xml version="1.3" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.danielakinola.loljournal.TestActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/img_champion_portrait0"
            android:layout_width="56dp"
            android:layout_height="56sp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/annie_loading" />

        <TextView
            android:id="@+id/text_champion_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_champion_portrait0"
            android:text="Annie"
            android:textSize="48sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_champion_name"
            android:layout_toEndOf="@+id/img_champion_portrait0"
            android:text="The Dark Child"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zuowei.circleimageview.CircleImageView
            android:id="@+id/img_champion_portrait"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/syndra_loading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_champion_portrait"
            android:gravity="center"
            android:text="Syndra"
            android:textSize="48sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zuowei.circleimageview.CircleImageView
            android:id="@+id/img_champion_portrait1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/taliyah_loading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_champion_portrait1"
            android:gravity="center"
            android:text="Annie"
            android:textSize="48sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zuowei.circleimageview.CircleImageView
            android:id="@+id/img_champion_portrait2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/annie_loading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_champion_portrait2"
            android:gravity="center"
            android:text="Annie"
            android:textSize="48sp" />
    </RelativeLayout>


</LinearLayout>
